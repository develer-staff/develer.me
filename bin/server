#!/usr/bin/env node

var log = require('bookrc');
var optimist = require('optimist');
var debug = require('debug')('localtunnel');

var argv = optimist
    .usage('Usage: $0 --port [num]')
    .options('auxports', {
        default: '',
        describe: 'aux ports'
    })
    .options('secure', {
        default: false,
        describe: 'use this flag to indicate proxy over https'
    })
    .options('port', {
        default: '80',
        describe: 'listen on this port for outside requests'
    })
    .argv;

if (argv.help) {
    optimist.showHelp();
    process.exit();
}

var server = require('../server')({
    max_tcp_sockets: 10,
    secure: argv.secure
});

server.listen(argv.port, function() {
    debug('server listening on port: %d', server.address().port);
});

var auxports = [];
if(argv.auxports) {
    auxports = argv.auxports.toString().split(' ');
}
if(argv.livereload) {
    auxports.push('35729');
}

for (var i = 0 ; i < auxports.length ; i++) {
    (function(port) {
        var server = require('../server')({
            max_tcp_sockets: 10,
            secure: argv.secure
        });

        server.listen(port, function() {
            debug('server listening on port: %d', server.address().port);
        });
    })(auxports[i]);
}

// vim: ft=javascript

